{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "class-methods-use-this": "off",
    "camelcase": "off",
    "import/no-extraneous-dependencies": "off",
    "no-param-reassign": "off",
    "arrow-body-style": "off"
  }
}
